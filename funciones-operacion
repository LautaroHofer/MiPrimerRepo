#include<stdio.h>
 

int suma(int a,int b){
	return a+b;
}
int resta(int a,int b){
	return a-b;
}

int multiplicacion(int a,int b){
	return a*b;
}

int division(int a,int b){
	return a/b;
}

int operar(int a,int b){
	int operacion;
	printf("Que operacion desea realizar?\n1 - Suma\n2 - Resta\n3 - Multiplicacion\nSeleccion: ");
	scanf("%d",&operacion);
	switch(operacion){
	case 1:
		suma(a,b);
		return a+b;
		break;
	case 2:
		resta(a,b);
		return a+b;
		break;
	case 3:
		multiplicacion(a,b);
		return a*b;
		break;
	default:
		printf("Operacion Invalidad!\n");
		break;
	}
}



int main(){
	
	int numero1,numero2,resultado;
	printf("Ingrese un numero: ");
	scanf("%d",&numero1);
	printf("Ingrese otro numero: ");
	scanf("%d",&numero2);
	
	resultado = operar(numero1,numero2);
	printf("%d",resultado);
	return 0;
}
